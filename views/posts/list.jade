extends ../template/default.tpl

block inside
	h1=title
	table.ui.celled.striped.table
		thead
			tr
				th #
				th Titre
				th Cat√©gories
				th URL
				th Date
				th Actions
		tbody
			each post, i in postList
				tr(id="#{post._id}")
					td.collapsing #{i + 1}
					td #{post.title}
					td.right.aligned.collapsing 
						each category in post.categories
							.ui.label #{ucfirst(category)}
					td.right.aligned.collapsing 
						a(href="#{post.url}", target="_blank") #{post.url}
					td.right.aligned.collapsing #{moment(post.date).format('D/M/YYYY H:m')}
					td.right.aligned.collapsing.collapsing
						a.ui.small.red.button.deletePost(href="#", rel="#{post._id}") Remove 
		tfoot
			tr
				th(colspan="6")
					form#formAdd.ui.form(name="addcategory",method="get",action="/posts/add")
						button.ui.blue.button(type="submit").
							#[i.edit.icon]
							Ajouter