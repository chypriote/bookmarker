extends template/add.tpl

block form
	form#formAddPost.ui.form(name="addPost", method="post", action="/plugins", enctype="multipart/form-data")
		.seven.wide.field
			label(for="inputTitle") Titre
			input#inputTitle(type="text", placeholder="Titre", name="inputTitle", required="")
		.seven.wide.field
			label(for="inputUrl") Lien
			input#inputUrl(type="text", placeholder="Lien", name="inputUrl")
		.nine.wide.field
			label(for="inputBody") Texte
			textarea#inputBody(type="text", placeholder="Texte", name="inputBody")
		.field
			label(for="inputImage") Image
			input#inputImage(type="file", name="inputImage")
		.seven.wide.field
			label Cat√©gorie
			select#inputCategory.ui.search.dropdown(multiple="", name="inputCategory", required="")
				each category in categoryList
					option(value="#{category.name}") #{category.name}
		.nine.wide.field
			button#btnSubmit.ui.right.floated.submit.button(type="submit") Enregistrer