extends template/default.tpl

block inside
	h1 Gestion des catégories
	table.ui.celled.striped.table
		thead
			tr
				th(colspan="3")= title
					form#formAddCategory.ui.form(name="addcategory",method="post",action="#")
						.fields
							.field
								input#inputCategory(type="text", placeholder="Category name", name="postCategory", required)
							.field
								button.ui.button Ajouter
		tbody
			each category in categoryList
				tr(id="#{category._id}")
					td #{ucfirst(category.name)}
					if (category.nb > 1)
						td.right.aligned.collapsing #{category.nb} éléments
					else if (category.nb)
						td.right.aligned.collapsing #{category.nb} élément
					else
						td.right.aligned.collapsing Aucun élément
					td.right.aligned.collapsing
						a.ui.small.red.button.delete(href="#", data-name="#{category.name}", data-id="#{category._id}") Remove 
		tfoot
			tr
				th(colspan="3")
					form#formAddCategory.ui.form(name="addcategory",method="post",action="/category")
						.fields
							.field
								input#inputCategory(type="text", placeholder="Category name", name="postCategory", required)
							.field
								button.ui.button Ajouter
	.ui.dimmer
		.ui.small.modal
			.header Supprimer catégorie
			.content
				p.
					Confirmer la suppression de la catégorie
					#[strong#categoryName null]
			.actions
				.ui.negative.button Non
				.ui.positive.right.button Oui


