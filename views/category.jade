extends template/default.tpl

block inside
	h1 Gestion des cat√©gories
	table.ui.celled.striped.table
		thead
			tr
				th(colspan="3")= title
					form#formAddCategory.ui.form(name="addcategory",method="post",action="/category")
						.fields
							.field
								input#inputCategory(type="text", placeholder="Category name", name="postCategory", required)
							.field
								button.ui.button Ajouter
		tbody
			each category in categoryList
				tr(id="#{category._id}")
					td #{ucfirst(category.name)}
					td.right.aligned.collapsing 5 articles
					td.right.aligned.collapsing
						a.ui.small.red.button.deleteCategory(href="#", rel="#{category._id}") Remove 
		tfoot
			tr
				th(colspan="3")
					form#formAddCategory.ui.form(name="addcategory",method="post",action="/category")
						.fields
							.field
								input#inputCategory(type="text", placeholder="Category name", name="postCategory", required)
							.field
								button.ui.button Ajouter